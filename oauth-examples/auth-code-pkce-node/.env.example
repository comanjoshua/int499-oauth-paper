# OIDC/OAuth settings
ISSUER=https://YOUR_ISSUER_HOST
CLIENT_ID=YOUR_CLIENT_ID
# Some IdPs want a secret with PKCE for confidential apps
CLIENT_SECRET=YOUR_CLIENT_SECRET

# Must match the redirect URI in the IdP app config
REDIRECT_URI=http://localhost:3000/callback

# Optional audience for APIs that need it
AUDIENCE=

# App port
PORT=3000

# Session secret for dev
SESSION_SECRET=change_me_for_dev
